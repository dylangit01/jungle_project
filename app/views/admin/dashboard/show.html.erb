<section>
	<header class="page-header">
		<h1>Admin &raquo; Dashboard</h1>
	</header>

	<div class="panel panel-default items">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Product</th>
					<th class="text-center">Quantity in Stock</th>
				</tr>
			</thead>
			<tbody>
				<% @products.each do |product| %>
				<tr>
					<td><%= product.name %></td>
					<td class="text-center"><%= product.quantity %></td>
				</tr>
				<% end %>
			</tbody>
			<div>
				<th>Total</th>
				<th class="text-center"><%= link_to @product_count, [:admin, :products] %></th>
			</div>
		</table>
	</div>

	<div class="panel panel-default items">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Category</th>
				</tr>
			</thead>
			<tbody>
				<% @categories.each do |category| %>
				<tr>
					<td><%= category.name %></td>
				</tr>
				<% end %>
			</tbody>
			<div>
				<th>Total <span class="pull-right mr-5"><%= @category_count %></span></th>
			</div>
		</table>
	</div>
</section>

<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well text-center">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default categories">
    <table class="table table-bordered text-center">
      <thead>
        <tr>
          <th class="text-center">Category</th>
          <th class="text-center">created_at</th>
          <th class="text-center">updated_at</th>
        </tr>
      </thead>
      <tbody>
				<!-- Below is rails shorthand syntax, which will do the each logic -->
        <%= render @categories %>
      </tbody>
    </table>

  </div>

</section>

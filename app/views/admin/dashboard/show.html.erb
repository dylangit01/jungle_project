<section>
	<header class="page-header">
		<h1>Admin &raquo; Dashboard</h1>
	</header>

	<div class="panel panel-default items">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Product</th>
					<th class="text-center">Quantity in Stock</th>
				</tr>
			</thead>
			<tbody>
				<% @products.each do |product| %>
				<tr>
					<td><%= product.name %></td>
					<td class="text-center"><%= product.quantity %></td>
				</tr>
				<% end %>
			</tbody>
			<div>
				<th>Total Count</th>
				<th class="text-center"><%= link_to @product_count, [:admin, :products], class: 'btn btn-sm btn-info' %></th>
			</div>
		</table>
	</div>

	<div class="panel panel-default items">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Category</th>
				</tr>
			</thead>
			<tbody>
				<% @categories.each do |category| %>
				<tr>
					<td><%= category.name %></td>
				</tr>
				<% end %>
			</tbody>
			<div>
				<th>Total Categories 
					<span class="pull-right" style="margin-right: 210px;">
						<%= link_to @category_count, [:admin, :categories], class: 'btn btn-sm btn-info' %>
					</span>
				</th>
			</div>
		</table>
	</div>
</section>
